<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Programming Challenge{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('style.css') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
      <header>
        <div class="logo">
          <img src="{{ asset('logo.png') }}" alt="Reddin Global Inc." />
        </div>
        <div class="nav">
          <ul>
            {% if app.user %}
              <li><a href="/logout">Logout</a></li>
            {% else %}
              <li><a href="{{ path('login') }}">Login</a></li>
            {% endif %}
          </ul>
        </div>
      </header>
      <div class="container">
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
      </div>
    </body>
</html>
